@{
    ViewData["Title"] = "Reimposta Password";
}

<div class="container">
    <div class="row min-vh-100 justify-content-center align-items-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <img src="~/images/sigiltech-logo.png" alt="Sigiltech" class="mb-3" style="max-height: 80px;">
                        <h2>Reimposta Password</h2>
                        <p class="text-muted">Inserisci la tua nuova password</p>
                    </div>

                    <form asp-action="ResetPassword" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <input type="hidden" name="email" value="@ViewData["Email"]" />
                        <input type="hidden" name="token" value="@ViewData["Token"]" />

                        <div class="mb-3">
                            <label for="password" class="form-label">Nuova Password</label>
                            <input name="password" type="password" class="form-control form-control-lg"
                                   placeholder="Inserisci la nuova password" required />
                            <small class="text-muted">
                                La password deve contenere almeno 6 caratteri, una lettera maiuscola,
                                una minuscola, un numero e un carattere speciale.
                            </small>
                        </div>

                        <div class="mb-4">
                            <label for="confirmPassword" class="form-label">Conferma Password</label>
                            <input name="confirmPassword" type="password" class="form-control form-control-lg"
                                   placeholder="Conferma la nuova password" required />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-key me-2"></i>Reimposta Password
                            </button>
                            <a href="@Url.Action("Login")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Torna al Login
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>