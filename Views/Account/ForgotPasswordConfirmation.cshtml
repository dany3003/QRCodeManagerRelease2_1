@{
    ViewData["Title"] = "Email Inviata";
}

<div class="container">
    <div class="row min-vh-100 justify-content-center align-items-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="fas fa-envelope-open-text text-success" style="font-size: 4rem;"></i>
                    </div>

                    <h2 class="mb-3">Controlla la tua Email</h2>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <p class="text-muted mb-4">
                        Se l'indirizzo email Ã¨ registrato nel nostro sistema, riceverai un'email
                        con un link per reimpostare la tua password.
                    </p>

                    <p class="text-muted small mb-4">
                        <i class="fas fa-info-circle me-1"></i>
                        Non hai ricevuto l'email? Controlla la cartella spam o
                        <a href="@Url.Action("ForgotPassword")">riprova</a>.
                    </p>

                    <a href="@Url.Action("Login")" class="btn btn-primary">
                        <i class="fas fa-arrow-left me-2"></i>Torna al Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>