
@model QRCodeManagerRelease2.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Accedi";
}

<div class="container">
    <div class="row min-vh-100">
        <div class="col-md-6 d-flex align-items-center">
            <div class="w-100">
                <div class="text-center mb-4">
                    <img src="~/images/sigiltech-logo.png" alt="Sigiltech" class="mb-3" style="max-height: 80px;">
                    <h2>Accedi al tuo account</h2>
                    <p class="text-muted">Inserisci le tue credenziali per continuare</p>
                </div>
                
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input name="email" type="email" class="form-control" required />
                    </div>
                    
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input name="password" type="password" class="form-control" required />
                    </div>
                    
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary w-100">Accedi</button>
                    </div>
                    
                    <div class="text-center">
                        <a href="#" class="text-decoration-none">Password dimenticata?</a>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="col-md-6 bg-light d-flex align-items-center">
            <div class="w-100 p-5">
                <div class="text-center">
                    <h3 class="mb-4">Non hai ancora un account?</h3>
                    <p class="mb-4">Registrati per accedere a tutte le funzionalit√† del sistema QRCode Manager</p>
                    
                    <div class="d-grid gap-3">
                        <a href="@Url.Action("Register")" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-user-plus me-2"></i>
                            Registrati come Azienda
                        </a>
                        
                        <a href="@Url.Action("PrivateRegistration")" class="btn btn-outline-secondary">
                            <i class="fas fa-user me-2"></i>
                            Registrazione Privati
                        </a>
                    </div>
                    
                    <div class="mt-4">
                        <small class="text-muted">
                            Registrandoti accetti i nostri 
                            <a href="@Url.Action("Privacy", "Home")">Termini di Servizio</a>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
