
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">SigiltecH QR-Link</h1>
    <p>Benvenuto nel sistema di gestione QR Code si SigiltecH.</p>
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="row justify-content-center mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Inizia a usare l'applicazione</h5>
                        <p class="card-text">Accedi al dashboard per gestire i tuoi QR code.</p>
                        <a asp-controller="Home" asp-action="Dashboard" class="btn btn-primary">Vai al Dashboard</a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row justify-content-center mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Accedi al sistema</h5>
                        <p class="card-text">Per utilizzare il sistema di gestione QR code Ã¨ necessario accedere.</p>
                       @*  <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Accedi</a> *@
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Accedi</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
